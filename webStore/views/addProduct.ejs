<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Page Title</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel='stylesheet' type='text/css' media='screen' href='/public/css/addProductStyle.css'>
</head>
<body>
  <%-include('includes/nav.ejs')%>

  <%if(errorMessage.length!=0){%>
    <h1 class="error"><%=errorMessage%></h1>
  <%}%>
  <div class="form-container">
        <form action="<%- edit ? '/editProduct' : '/addProduct' %>" class="form" method="POST" autocomplete="off" enctype="multipart/form-data">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<%if (edit)%><%=data.title%>">

          <label for="image">Image</label>
          <input type="file" name="image" id="image">

          <label for="price">Price</label>
          <input type="number" name="price" id="price" value="<%if (edit)%><%=data.price%>">

          <label for="description">Description</label>
         <textarea name="description" id="description"><%if (edit)%><%=data.description%></textarea>
         <input type="hidden" name = "id" value="<%=data._id%>">
         <button class= "submit" type = "submit"><%-edit ? 'Change' : 'Add'%></button>
      </form>
  </div>

  
</body>
</html>